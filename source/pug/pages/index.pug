extends ../components/base/layout

block variables
  - const title = "KSD" //- на страницах кроме главной используйте О нас — ProjectName
  - const wrapperMods = "wrapper--main"
  - const hasHeader = true
  - const headerMods = "header--main"
  - const hasFooter = true
  - const footerMods = ""
  - const currentUrl = "index.html" //- для остальных страниц пишем пустую строку или индекс активного headerLinks

block main
  main
    //- на странице запрещен "голый" код
    //- все блоки вставляются из папки pug/components/blocks
    +hero()
    +directions()
    +about-company()
    +history()
    +principles()
    +team()
    +career()
    +projects()
    +blog()
    +contact-us()

block modals
  +modal("modal--contact-us")(data-modal="contact-us")
    +modal-contact-us()
