extends ../components/base/layout

block variables
	- const title = "KSD - Рециклинг" //- на страницах кроме главной используйте О нас — ProjectName
	- const wrapperMods = "wrapper--recycling"
	- const hasHeader = true
	- const headerMods = "header--recycling"
	- const sectionClassMode = ""
	- const hasFooter = true
	- const footerMods = ""
	- const currentUrl = "recykling.html" //- для остальных страниц пишем пустую строку или индекс активного headerLinks

block main
	main
		//- на странице запрещен "голый" код
		//- все блоки вставляются из папки pug/components/blocks
		+hero-section("recycling")
		+partners("recycling")
		+directions("recycling")
		+numbers()
		+services()
		+map("recycling")
		+technic("recycling")
		+blog-recycling()
		+contact-us("recycling")
block modals
	+modal("modal--offer modal--fit-content")(data-modal="offer")
		+modal-offer("recycling")
