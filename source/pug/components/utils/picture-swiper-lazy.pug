mixin picture-swiper-lazy(path, image, format, altText)
  picture(class!=attributes.class)
    source(type='image/webp', data-srcset="img/" + path + "/" + image + ".webp" + ", " + "img/" + path + "/" + image + "@2x.webp" + " 2x")
    img.swiper-lazy(data-src="img/" + path + "/" + image + "." + format, data-srcset= "img/" + path + "/" + image + "@2x." + format + " 2x", alt= altText)
  .swiper-lazy-preloader
