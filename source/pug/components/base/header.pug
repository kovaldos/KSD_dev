            each link in data.headerTop.links
              li.header__top-list-item(class=link.itemClassMod)
                span.header__top-list-item-icon!=link.icon
                a.link.header__top-link(href=link.href)=link.text

    .header__bottom
      .container.header__container.header__container--bottom
        if(currentUrl === "index.html")
          //- lighthouse снимает 10 баллов SEO за <a> без href
          span.header__logo
            +icon("logo", 118, 32)
        else
          a.header__logo(href="index.html" aria-label="Переход на главную")
            +icon("logo", 118, 32)
        nav.main-nav
          .main-nav__wrapper(data-burger-body)
            if headerMods === "header--main"
              ul.main-nav__list
                each link in data.main.headerLinks
                  - const activeState = currentUrl === link.href
                  li.main-nav__item
                    if(activeState)
                      span.link.main-nav__link.is-active=link.text
                    else
                      a.link.main-nav__link(href=link.href)=link.text
              button.btn.btn--reset.main-nav__submenu-toggle(type="button")
