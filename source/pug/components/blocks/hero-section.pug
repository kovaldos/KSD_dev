	section.hero-section(class="hero-section--" + mods)
		.container.hero-section__container
			.hero-section__col.hero-section__col--01
				.hero-section__heading 
					if mods === "demolition"
						h1.title.title--h1.hero-section__title=data.demolition.title
							span.hero-section__subtitle=data.demolition.subtitle
					else if mods === "recycling"
						h1.title.title--h1.hero-section__title=data.recycling.title
							span.hero-section__subtitle=data.recycling.subtitle
					else if mods === "improvement"
						h1.title.title--h1.hero-section__title=data.improvement.title
							span.hero-section__subtitle=data.improvement.subtitle
					else if mods === "pits"
						h1.title.title--h1.hero-section__title=data.pits.title
							span.hero-section__subtitle=data.pits.subtitle
				.hero-section__numbers
					if mods === "demolition"
						each item in data.demolition.numbers
							.hero-section__numbers-item
								strong.hero-section__numbers-num=item.num 
								p.text.hero-section__numbers-text=item.text
					else if mods === "recycling"
						each item in data.recycling.numbers
							.hero-section__numbers-item
								strong.hero-section__numbers-num=item.num 
								p.text.hero-section__numbers-text=item.text
					else if mods === "improvement"
						each item in data.improvement.numbers
							.hero-section__numbers-item
								strong.hero-section__numbers-num=item.num 
								p.text.hero-section__numbers-text=item.text
					else if mods === "pits"
						each item in data.pits.numbers
							.hero-section__numbers-item
								strong.hero-section__numbers-num=item.num 
								p.text.hero-section__numbers-text!=item.text
		.hero-section__col.hero-section__col--02
			if mods === "demolition"
				.swiper.hero-section__slider
					.swiper-wrapper 
						each item in data.demolition.items
							.swiper-slide 
								.hero-section__slider-item 
									+img(item.src, item.img, "jpg", item.alt)
				.swiper-pagination.hero-section__slider-pag
			else if mods === "recycling"
				.swiper.hero-section__slider(class="hero-section__slider--" + mods)
					.swiper-wrapper 
						each item in data.recycling.items
							.swiper-slide 
								.hero-section__slider-item 
									+img(item.src, item.img, "jpg", item.alt)
				.swiper-pagination.hero-section__slider-pag
			else if mods === "improvement"
				.swiper.hero-section__slider(class="hero-section__slider--" + mods)
