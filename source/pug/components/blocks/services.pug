mixin services()
	-
		const data = {
			title: "Услуги",
			subtitle: "Эффективное обращение с отходами строительства и сноса",
			items: [
				{
					title: "Утилизация строительного мусора",
					text: "Утилизация строительного мусора, происходит максимально экологичным способом. Используем современные подходы.",
					src: "content",
					img: "services-img-1",
					alt: "services-img-background",
					classMod: "services__list-item--01"
				},
				{	
					title: "Вывоз и прием ОССиГ",	
					text: "KSD Group — лицензированный участник процесса АИС ОССиГ. Перевозка, прием и утилизация отходов.",	
					src: "content",
					img: "services-img-2",
					alt: "services-img-background",
					classMod: "services__list-item--02"
				},
				{			
					title: "Сортировка материалов",
					text: "Сортировка материалов по видам и классам опасности. Результат сортировки — отправка на переработку или на утилизацию.",	
					src: "content",
					img: "services-img-3",
					alt: "services-img-background",
					classMod: "services__list-item--03"
				},
				{		
					title: "Переработка строительных отходов",
					text: "Бой бетона и бой кирпича перерабатываются во вторичный щебень и используются в строительстве и благоустройстве.",	
					src: "content",
					img: "services-img-4",
					alt: "services-img-background",
					classMod: "services__list-item--04"
				},
			],
			title2: "Утилизация и переработка",
			text: "Переработка полного цикла отходов строительства и сноса",
		}
	section.section.services 
		.container.services__container
			.services__heading
				h2.title.title--h2=data.title 
				h3.title.title--h3=data.subtitle
			.services__top 
				ul.services__list(data-accordion="parent")
					each item in data.items
						li.services__list-item(class=item.classMod data-accordion="element")
							//- .services__list-item-pic
							//- 	+img(item.src, item.img, "jpg", item.alt)
							.services__list-item-head(data-accordion="button")
								h4.title.title--h6.services__list-item-title=item.title
								img(src="../img/content/icon-tap.png", alt="иконка тап по экрану")
							if item.text
								p.text.text--md.services__list-item-text(data-accordion="content")=item.text
							else
								p.text.text--md.services__list-item-text(data-accordion="content")
		.services__bottom 
			.container.services__container.services__container--bottom
				.services__bottom-cols
					.services__bottom-col.services__bottom-col--01
						h3.title.title--h3.services__bottom-title=data.title2 
						p.text.text--lg.services__bottom-text=data.text
					.services__bottom-col.services__bottom-col--02
						.services__bottom-video(data-video-block)
							button(type="button" data-video-btn).btn.btn--apple.services__bottom-video-btn
								+icon("icon-play", 14, 14)
							video(src="https://cdn.videvo.net/videvo_files/video/premium/video0237/large_watermarked/02_day_Stockholm_99_rotate_sun_crane_preview.mp4", type="video/mp4", controls muted preload="none" poster="./img/content/tech-video-poster.jpg")